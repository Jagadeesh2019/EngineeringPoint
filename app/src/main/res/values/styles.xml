<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowBackground">@drawable/vtu_point_background</item>-->
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="AppTheme.LightWindowBackGround">
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.NoActionBar.SplashActivityTheme">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActivityThemeRed" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorRedPrimary</item>
        <item name="colorPrimaryDark">@color/colorRedPrimaryDark</item>
        <item name="colorAccent">@color/colorRedAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

    </style>


    <style name="ActivityThemeGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorGreenPrimary</item>
        <item name="colorPrimaryDark">@color/colorGreenPrimaryDark</item>
        <item name="colorAccent">@color/colorGreenAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

    </style>




</resources>
