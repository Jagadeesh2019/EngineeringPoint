<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/papers_item_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="@dimen/dp_5">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/papers_item_card_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/papers_item_ll_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject Code Goes Here"
                android:gravity="center"
                android:textSize="15sp"
                android:padding="@dimen/dp_5"
                android:background="#D3D3D3"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/papers_item_ll_paper_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paper Name Goes Here"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="@dimen/dp_5"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/papers_item_ll_paper_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paper Sub Name Goes Here"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="@dimen/dp_5"
                android:textColor="@android:color/black"
                android:textStyle="normal"/>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/button_holder_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/papers_item_card_ll_view_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="View paper"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:padding="@dimen/dp_5"
                   android:layout_margin="@dimen/dp_10"
                    android:elevation="1dp"
                    android:clickable="true"
                    android:stateListAnimator="@anim/card_animation"
                    android:textStyle="normal"
                    android:textColor="#007bff"
                    android:background="@drawable/view_resource_button_background"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/papers_item_card_ll_download_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Download Resource"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:padding="@dimen/dp_5"
                    android:layout_margin="@dimen/dp_10"
                    android:elevation="1dp"
                    android:clickable="true"
                    android:stateListAnimator="@anim/card_animation"
                    android:textStyle="normal"
                    android:textColor="@android:color/white"
                    android:background="@drawable/get_resource_button_shape"/>


            </androidx.appcompat.widget.LinearLayoutCompat>



        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>