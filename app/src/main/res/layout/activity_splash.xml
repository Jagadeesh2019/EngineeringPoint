<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SplashActivity"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/vtu_point_background"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/app_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_library"
        tools:visibility="visible"/>

    <LinearLayout
        android:id="@+id/splash_text_container"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/app_title"
            style="@style/AppTheme.NoActionBar.SplashActivityTheme"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_title"
            android:textSize="@dimen/appTitleSize"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/app_sub_title"
            style="@style/AppTheme.NoActionBar.SplashActivityTheme"
            android:layout_marginTop="@dimen/dp_5"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_sub_title"
            android:textSize="@dimen/appSubTitleSize"/>

    </LinearLayout>



</LinearLayout>